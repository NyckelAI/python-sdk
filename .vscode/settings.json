{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.sortImports": true,
    },
    "editor.formatOnSave": true,
    "mypy.configFile": "pyproject.toml",
    "files.exclude": {
        "**/.git": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.ropeproject": true,
        "**/.idea": true,
    },
    "cSpell.words": [
        "chunkify",
        "Gruezi",
        "Hola",
        "ncols",
        "nyckel",
        "pytest",
        "tqdm"
    ],
}